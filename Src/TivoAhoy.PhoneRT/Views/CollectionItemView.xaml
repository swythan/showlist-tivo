<UserControl
    x:Class="TivoAhoy.PhoneRT.Views.CollectionItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
    xmlns:vm="clr-namespace:TivoAhoy.Common.ViewModels;assembly=TivoAhoy.Common"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50"
    d:DesignWidth="480"
    d:DataContext="{d:DesignInstance Type=vm:CollectionItemViewModel, IsDesignTimeCreatable=True}">

    <Grid
        x:Name="LayoutRoot"
        Background="Transparent"
        cal:Message.Attach="[Event Tap] = [Action DisplayCollectionDetails()]">
        <StackPanel Orientation="Horizontal">
            <Image Source="/Images/Television.png" 
                   Stretch="None"
                   Margin="12,0,0,0"/>
            <TextBlock
                Text="{Binding DisplayText}"
                VerticalAlignment="Center"
                Style="{StaticResource PhoneTextNormalStyle}" />
        </StackPanel>
    </Grid>
</UserControl>